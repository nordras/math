{
  "name": "math-prototype-tests",
  "version": "1.0.0",
  "description": "Testes unitários para o protótipo math",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "generators/**/*.js",
      "templates/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "__tests__/coverage",
    "verbose": true
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
